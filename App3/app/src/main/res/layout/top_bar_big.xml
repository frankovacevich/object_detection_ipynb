<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:background="@drawable/view_gradientfill"
        android:elevation="1dp">

        <!-- GENERAL CONTAINER -->
        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <!-- TOP PANEL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- FIRST PANEL -->
                <LinearLayout
                    android:id="@+id/top_layout_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="165dp"
                            android:src="@drawable/s7" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:alpha="0.75"
                            android:padding="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_gravity="bottom"
                            android:background="#000000">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginBottom="5dp"
                                android:alpha="1"
                                android:src="@drawable/siete_espada" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:gravity="center"
                                android:text="7 DE ESPADA\n(MUY ALTA)"
                                android:textColor="#FFFFFF" />
                        </LinearLayout>


                    </FrameLayout>


                </LinearLayout>

                <!-- SECOND PANEL -->
                <LinearLayout
                    android:id="@+id/top_layout_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:orientation="vertical"
                    android:padding="5dp">



                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="165dp"
                            android:src="@drawable/o4" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:alpha="0.75"
                            android:padding="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_gravity="bottom"
                            android:background="#000000">
                            <ImageView
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginBottom="5dp"
                                android:alpha="1"
                                android:src="@drawable/macho" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:gravity="center"
                                android:text="CUATRO\n(BAJA)"
                                android:textColor="#FFFFFF" />
                        </LinearLayout>
                    </FrameLayout>


                </LinearLayout>

                <!-- THIRD PANEL -->
                <LinearLayout
                    android:id="@+id/top_layout_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:orientation="vertical"
                    android:padding="5dp">



                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="165dp"
                            android:src="@drawable/c3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:alpha="0.75"
                            android:padding="5dp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="bottom"
                            android:background="#000000">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginBottom="5dp"
                                android:alpha="1"
                                android:src="@drawable/tres" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:gravity="center"
                                android:text="TRES\n(ALTA)"
                                android:textColor="#FFFFFF" />
                        </LinearLayout>
                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- BOTTOM PANEL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- LEFT BOTTOM PANEL -->
                <LinearLayout
                    android:id="@+id/top_layout_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="50"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:text="ENVIDO: 27 (Las viejas)"
                        android:textColor="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@drawable/hor_progress_bar"
                        android:weightSum="100">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="50"
                            android:background="@drawable/hor_progress_bar"
                            android:backgroundTint="#00FF00" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="left"
                        android:text="47% chances de ganar"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <!-- RIGHT BOTTOM PANEL -->
                <LinearLayout
                    android:id="@+id/top_layout_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="50"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="left"
                        android:text="TRUCO"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@drawable/hor_progress_bar"
                        android:weightSum="100">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="50"
                            android:background="@drawable/hor_progress_bar"
                            android:backgroundTint="#00FF00" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="left"
                        android:text="52% chances de ganar"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

</android.support.constraint.ConstraintLayout>